                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_main_tab1"
                    android:layout_width="@dimen/img_tab_size"
                    android:layout_height="@dimen/img_tab_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/home_disabled" />

                <TextView
                    android:id="@+id/tv_main_tab1"
                    style="@style/style_text_hometab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_tab"
                    android:text="首页" />
            </LinearLayout>
        </RelativeLayout>

